<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/custom_notification_iv"
        android:layout_centerInParent="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_notification" />

    <TextView
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#fff"
        android:padding="4dp"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/custom_notification_shape"
        android:id="@+id/custom_notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/custom_notification_iv"
        android:layout_toRightOf="@+id/custom_notification_iv"/>
</RelativeLayout>